<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".T2SFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/t2s_player"
        android:background="@drawable/rect_view"
        android:layout_gravity="top"
        app:layout_constraintVertical_bias="0"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/t2s_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_play"
            android:layout_width="70dp"
            android:layout_height="81dp"
            app:layout_constraintHorizontal_bias="0.30"
            android:src="@drawable/ic_play_arrow_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/image_play"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="81dp"
            android:id="@+id/image_stop"
            app:layout_constraintHorizontal_bias="0.70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_stop_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/image_stop"/>

        <!--<Spinner
            android:id="@+id/languages_spinner"
            style="@style/button_h"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_stop" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Per provare e vedere se funziona
    <Button
        android:id="@+id/button_pause"
        style="@style/button_h"
        android:layout_marginTop="8dp"

        android:text="@string/button_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/t2s_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10sp"
        android:background="@drawable/rect_view"
        app:layout_constraintBottom_toBottomOf="@id/t2s_button_nav"
        app:layout_constraintTop_toBottomOf="@id/t2s_player">
        <TextView
            android:id="@+id/textbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/t2s_button_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50sp"
        android:layout_marginHorizontal="10sp"
        android:background="@drawable/rect_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t2s_text"
        app:layout_constraintVertical_bias="1"
        tools:layout_editor_absoluteX="0dp">
        <Button
            android:id="@+id/button_back"
            style="@style/button_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="@string/button_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_add_history"
            />
        <Button
            android:id="@+id/button_add_history"
            style="@style/button_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="@string/button_add_history"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button_back"
            app:layout_constraintRight_toLeftOf="@id/share"
            />
        <Button
            android:id="@+id/share"
            style="@style/button_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="@string/button_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button_add_history"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>