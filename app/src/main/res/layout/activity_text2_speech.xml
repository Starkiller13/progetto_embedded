    <ImageView
        android:id="@+id/image_play"
        android:layout_width="70dp"
        android:layout_height="81dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="70dp"
        android:onClick="play"
        android:src="@drawable/ic_start"
        app:layout_constraintBottom_toTopOf="@+id/languages_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="@string/image_play"/>

    <ImageView
        android:id="@+id/image_stop"
        android:layout_width="70dp"
        android:layout_height="81dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        android:onClick="stop"
        android:src="@drawable/ic_stop"
        app:layout_constraintStart_toEndOf="@+id/image_play"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_stop"/>

    <!-- Per provare e vedere se funziona-->
    <Button
        android:id="@+id/button_pause"
        style="@style/button_h"
        android:layout_marginTop="8dp"

        android:text="@string/button_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/languages_spinner"
        style="@style/button_h"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_stop" />

    <TextView
        android:id="@+id/textbox"
        android:layout_width="382dp"
        android:layout_height="342dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_add_history"
        style="@style/button_h"
        android:onClick="addHistory"
        android:text="@string/button_add_history"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox"
        />

</androidx.constraintlayout.widget.ConstraintLayout>