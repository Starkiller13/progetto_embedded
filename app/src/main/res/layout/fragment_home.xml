<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corgilab.corgiOCR.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_rec_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20sp"
            android:layout_marginVertical="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recently_added"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="bottom"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginHorizontal="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:id="@+id/home_rec_view"
            app:layout_constraintBottom_toTopOf="@id/button_camera"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:text="@string/home_button_camera"
            android:id="@+id/button_camera"
            style="@style/button_h"
            android:drawableTop="@drawable/ic_camera_alt_black_24dp"
            android:onClick="camera"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="0.20"
            />

        <Button
            android:id="@+id/button_galley"
            android:text="@string/home_button_galley"
            style="@style/button_h"
            android:drawableTop="@drawable/ic_image_black_24dp"
            android:onClick="gallery"
            android:layout_marginBottom="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintVertical_bias="1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>